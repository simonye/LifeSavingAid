<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textSize="20dp"
        android:id = "@+id/createEmergency_back"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Emergency Title:"
        android:textColor="#ff0000"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a title for your emergency"
        android:id="@+id/createEmergency_title"
        android:textSize="25dp"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#ff0000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a new instruction here"
        android:textSize="25dp"
        android:id="@+id/createEmergency_newInstruction"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD INSTRUCTION"
        android:textSize="23dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/createEmergency_addInstruction"
        android:background="@drawable/button2"

        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createEmergency_list"
        android:layout_gravity="center_horizontal" />

</LinearLayout>