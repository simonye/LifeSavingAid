<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/header" />

    </LinearLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Back"
        android:textSize="20dp"
        android:id = "@+id/reachFriends_back"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textColor="#ff0000"
        android:text="Reach for Friends:"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:id="@+id/reachFriends_name"
        android:textSize="30dp"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button2"
        android:text="Reach"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/getNewInstruction_cancel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:text="result not found"
        android:textSize="25dp"
        android:gravity="center" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button"
        android:text="No searching, just Go to Friends List"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/getNewInstruction_goTofriendsList"/>



</LinearLayout>